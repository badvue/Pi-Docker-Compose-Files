services:
  foldingathome:
    image: lscr.io/linuxserver/foldingathome:latest
    container_name: foldingathome
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/Chicago
      - ACCOUNT_TOKEN=XXXXX
      - MACHINE_NAME=XXX
    volumes:
      - /Desktop/Folding@Home:/config
    ports:
      - 7396:7396
    restart: unless-stopped

  nextcloud:
    image: lscr.io/linuxserver/nextcloud:latest
    container_name: Nextcloud
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/Chicago
    volumes:
      - /Desktop/Nextcloud:/config
      - /Desktop/Nextcloud:/data
    ports:
      - 443:443
    restart: unless-stopped

  emulatorjs:
    image: lscr.io/linuxserver/emulatorjs:latest
    container_name: Emulatorjs
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/Chicago
      - SUBFOLDER=/ #optional
    volumes:
      - /Desktop/emulatorjs/config:/config
      - /Desktop/emulatorjs/data:/data
    ports:
      - 3001:3000
      - 8080:80
      - 4001:4001
    restart: unless-stopped

  piaware:
    image: ghcr.io/sdr-enthusiasts/docker-piaware:latest
    tty: true
    container_name: piaware
    restart: always
    devices:
      - /dev/PiAware:/dev/bus/usb
    volumes:
      - /dev/bus/usb:/dev/bus/usb
    ports:
      - 8081:80
      - 30003:30003
      - 30005:30005
    environment:
      - TZ=America/Chicago
      - LAT=33.36396249231442
      - LONG=-86.81919215985052
      - FEEDER_ID=e0798e55-d3ff-4bd7-bd04-610c16d74b96
      - RECEIVER_TYPE=rtlsdr
      - ALLOW_MLAT=yes
      - MLAT_RESULTS=yes
      - RTLSDR_GAIN=max
      - DUMP1090_ADAPTIVE_RANGE=true
      - DUMP1090_ADAPTIVE_DUTY_CYCLE=25
      - DUMP1090_ADAPTIVE_RANGE_TARGET=25
      - DUMP1090_ADAPTIVE_MIN_GAIN=48
    tmpfs:
      - /run:exec,size=64M
      - /var/log

  ring-mqtt:
    container_name: ring-mqtt
    restart: unless-stopped
    image: tsightler/ring-mqtt:latest
    ports:
      - 8554:8554
    volumes:
      - /Desktop/ring:/data
    logging:
      options:
        max-size: 10m
        max-file: "3"

  mosquitto:
    image: eclipse-mosquitto
    container_name: mosquitto
    restart: unless-stopped
    volumes:
      - /Desktop/MQTT:/mosquitto
      - /Desktop/MQTT/data:/mosquitto/data
      - /Desktop/MQTT/log:/mosquitto/log
    ports:
      - 1883:1883
      - 9001:9001

  go2rtc:
    image: alexxit/go2rtc
    container_name: go2rtc
    network_mode: host
    depends_on:
      ring-mqtt:
        condition: service_started
    privileged: true
    restart: unless-stopped
    environment:
      - TZ=America/Chicago
    volumes:
      - /Desktop/go2rtc:/config

  scanservjs:
    ports:
      - 8070:8080
    volumes:
      - /Desktop/scan:/app/data/output
