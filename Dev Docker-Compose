services:
  foldingathome:
    image: lscr.io/linuxserver/foldingathome:latest
    container_name: foldingathome
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/Chicago
    volumes:
      - /Desktop/Folding@Home:/config
    ports:
      - 7396:7396
      - 36330:36330 #optional
    restart: unless-stopped

  nextcloud:
    image: lscr.io/linuxserver/nextcloud:latest
    container_name: nextcloud
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/Chicago
    volumes:
      - /Desktop/Nextcloud:/config
      - /Desktop/Nextcloud:/data
    ports:
      - 443:443
    restart: unless-stopped

  emulatorjs:
    image: lscr.io/linuxserver/emulatorjs:latest
    container_name: emulatorjs 
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/Chicago
      - SUBFOLDER=/ #optional
    volumes:
      - /Desktop/emulatorjs/config:/config
      - /Desktop/emulatorjs/data:/data
    ports:
      - 3001:3000
      - 80:80
    restart: unless-stopped

  piaware:
    image: ghcr.io/sdr-enthusiasts/docker-piaware:latest
    tty: true
    container_name: piaware
    restart: always
    devices:
      - /dev/PiAware:/dev/bus/usb
    volumes:
      - /dev/bus/usb:/dev/bus/usb
    ports:
      - 8080:80
      - 30003:30003
      - 30005:30005
    environment:
      - TZ=America/Chicago
      - LAT=XXXXXXXX
      - LONG=XXXXXXXX
      - FEEDER_ID=XXXXXXXX
      - RECEIVER_TYPE=rtlsdr
      - ALLOW_MLAT=yes
      - MLAT_RESULTS=yes
      - RTLSDR_GAIN=max
      - DUMP1090_ADAPTIVE_RANGE=true
      - DUMP1090_ADAPTIVE_DUTY_CYCLE=100
    tmpfs:
      - /run:exec,size=64M
      - /var/log

  snowflake-proxy:
    network_mode: host
    image: thetorproject/snowflake-proxy:latest
    container_name: snowflake-proxy
    restart: unless-stopped

  ring-mqtt:
    container_name: ring-mqtt
    restart: unless-stopped
    image: tsightler/ring-mqtt
    ports:
      - 8554:8554
    volumes:
      - /Desktop/ring:/data
    logging:
      options:
        max-size: 10m
        max-file: "3"

  mosquitto:
    image: eclipse-mosquitto
    container_name: mosquitto
    restart: unless-stopped
    volumes:
      - /Desktop/MQTT:/mosquitto
      - /Desktop/MQTT/data:/mosquitto/data
      - /Desktop/MQTT/log:/mosquitto/log
    ports:
      - 1883:1883
      - 9001:9001    

  go2rtc:
    image: alexxit/go2rtc
    container_name: go2rtc
    network_mode: host
    depends_on:
      ring-mqtt:
        condition: service_started
    privileged: true
    restart: unless-stopped
    environment:
      - TZ=America/Chicago
    volumes:
      - /Desktop/go2rtc:/config

  scanservjs:
    ports:
      - 8070:8080 
    environment:
      - SANED_NET_HOSTS=192.168.10.2
    volumes:
      - /Desktop/scan:/app/data/output
      - /Desktop/scan:/app/config
    container_name: scanservjs
    image: sbs20/scanservjs:latest
    restart: unless-stopped

  portainer-ce:
    container_name: portainer
    image: portainer/portainer-ce:latest
    ports:
      - 9443:9443
    restart: always
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /Desktop/Portainer:/data

  nut-ups:
    image: upshift/nut-upsd:latest
    container_name: nut_upsd
    restart: always
    ports:
      - 3493:3493
    devices:
      - /dev/CyberPowerUPS:/dev/bus/usb
    environment:
      UPS_NAME: Third_Bedroom
      API_USER: pi
